{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true, // 라이브러리 파일의 타입 검사 건너뜀
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // default import 허용
    "strict": true,
    "forceConsistentCasingInFileNames": true, // 파일 이름의 대소문자 일관성 강제
    "noFallthroughCasesInSwitch": true, // switch 문에서 누락된 case 방지
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true, // JSON 모듈을 import할 수 있음
    "isolatedModules": true, // 모든 파일이 독립적인 모듈로 간주됨
    "noEmit": true, // 컴파일된 파일을 생성하지 않음
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
